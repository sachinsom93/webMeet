<%- include('_message') %>
<div class="container mycontainer my-4">
    <form class="px-4 py-3" method="POST" action="/user/register">
      <div class="form-group">
        <label for="name">Name</label>
        <input 
          type="text" 
          class="form-control" 
          id="name" name="name"
          placeholder="Enter your name"
          value="<%= (typeof user != undefined) ? user.name : '' %>">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input 
          type="email" 
          class="form-control" 
          id="email" 
          name="email" 
          placeholder="Enter your email"
          value="<%= (typeof user != undefined) ? user.email : '' %>">
      </div>
      <div class="form-group">
          <label for="password">New Password</label>
          <input 
            type="password" 
            class="form-control" 
            id="password" 
            name="password" 
            placeholder="Enter a new password"
            value="<%= (typeof user != undefined) ? user.password : '' %>">
      </div>
      <div class="form-group">
          <label for="password2">confirm Password</label>
          <input 
            type="password" 
            class="form-control" 
            id="password2" 
            name="password2" 
            placeholder="Confirm password"
            value="<%= (typeof user != undefined) ? user.password2 : '' %>">
      </div>
      
      <button type="submit" class="btn btn-dark">Sign in</button>
    </form>
    <p >Already have an account ? <a style="font-weight: 700; color: black;" href="/user/login">Sign Up</a></p>
  </div>